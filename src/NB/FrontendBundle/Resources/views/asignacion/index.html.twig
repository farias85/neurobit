{% extends 'base.html.twig' %}

{% block body %}
    <h1>Asignacions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Tiempo</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for asignacion in asignacions %}
            <tr>
                <td><a href="{{ path('asignacion_show', { 'id': asignacion.id }) }}">{{ asignacion.id }}</a></td>
                <td>{{ asignacion.tiempo }}</td>
                <td>{% if asignacion.disponible %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('asignacion_show', { 'id': asignacion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('asignacion_edit', { 'id': asignacion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('asignacion_new') }}">Create a new asignacion</a>
        </li>
    </ul>
{% endblock %}
