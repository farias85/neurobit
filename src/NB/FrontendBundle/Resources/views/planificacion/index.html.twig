{% extends 'base.html.twig' %}

{% block body %}
    <h1>Planificacions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Horainicio</th>
                <th>Horafin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for planificacion in planificacions %}
            <tr>
                <td><a href="{{ path('planificacion_show', { 'id': planificacion.id }) }}">{{ planificacion.id }}</a></td>
                <td>{% if planificacion.fecha %}{{ planificacion.fecha|date('Y-m-d') }}{% endif %}</td>
                <td>{% if planificacion.horaInicio %}{{ planificacion.horaInicio|date('H:i:s') }}{% endif %}</td>
                <td>{% if planificacion.horaFin %}{{ planificacion.horaFin|date('H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('planificacion_show', { 'id': planificacion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('planificacion_edit', { 'id': planificacion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('planificacion_new') }}">Create a new planificacion</a>
        </li>
    </ul>
{% endblock %}
