{% extends 'base.html.twig' %}

{% block body %}
    <h1>Especialidad</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ especialidad.id }}</td>
        </tr>
        <tr>
            <th>Nombre</th>
            <td>{{ especialidad.nombre }}</td>
        </tr>
        <tr>
            <th>Descripcion</th>
            <td>{{ especialidad.descripcion }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('especialidad_index') }}">Volver a la lista</a>
        </li>
        <li>
            <a href="{{ path('especialidad_edit', { 'id': especialidad.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Eliminar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
