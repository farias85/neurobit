{% extends ":backend:backend.layout1.html.twig" %}

{% block backend_header %}
    <!-- Main Header -->
    <header class="main-header" ng-controller="HeaderController" ng-cloak ng-init="init()">
        <!-- Logo -->
        <a href="#" class="logo">
            <!-- mini logo for sidebar mini 50x50 pixels -->
            <span class="logo-mini">SF</span>
            <!-- logo for regular state and mobile devices -->
            <span class="logo-lg"><b>Admin</b>Seniors First</span>
        </a>
        <!-- Header Navbar -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
            </a>
            <!-- Navbar Right Menu -->
            <div class="navbar-custom-menu">
                <ul class="nav navbar-nav">
                    <!-- Messages: style can be found in dropdown.less-->
                    <li class="dropdown messages-menu">
                        <!-- Menu toggle button -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-envelope-o"></i>
                            <span class="label label-success">{| countIncidenciasPendientes |}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">
                                {{ 'incidencias.pendientes' | trans }} ({| countIncidenciasPendientes |})
                            </li>
                            <li>
                                <!-- Inner Menu: contains the notifications -->
                                <ul class="menu">
                                    <li><!-- start notification -->
                                        <a href="{{ path('backend_admin_incidencia_pendiente') }}">
                                            {{ 'todaslas.incidencias.resueltas' | trans({},'menu-i18n') }}
                                        </a>
                                    </li>
                                    <!-- end notification -->
                                </ul>
                            </li>
                            <li class="footer">
                                <a href="{{ path('backend_admin_incidencia_pendiente') }}">
                                    {{ 'mas.informacion' | trans }}
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- /.messages-menu -->
                    <!-- Notifications Menu -->
                    <li class="dropdown notifications-menu">
                        <!-- Menu toggle button -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-bell-o"></i>
                            <span class="label label-warning">{| countEntrevistasEnProceso |}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">
                                {{ 'entrevistas.enproceso' | trans({},'menu-i18n') }} ({| countEntrevistasEnProceso |})
                            </li>
                            <li>
                                <!-- Inner Menu: contains the notifications -->
                                <ul class="menu">
                                    <li><!-- start notification -->
                                        <a href="{{ path('entrevista_en_proceso') }}">
                                            {{ 'entrevistas.ennegociacion' | trans({},'menu-i18n') }}
                                        </a>
                                    </li>
                                    <!-- end notification -->
                                </ul>
                            </li>
                            <li class="footer">
                                <a href="{{ path('entrevista_en_proceso') }}">
                                    {{ 'mas.informacion' | trans }}
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Tasks Menu -->
                    <li class="dropdown tasks-menu">
                        <!-- Menu Toggle Button -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-flag-o"></i>
                            <span class="label label-danger">{| countPeticionesServicio |}</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">{{ 'peticiones.deservicios' | trans({},'menu-i18n') }} ({| countPeticionesServicio |})</li>
                            <li>
                                <!-- Inner menu: contains the tasks -->
                                <ul class="menu">
                                    <li><!-- Task item -->
                                        <a href="{{ path('backend_servicio_peticiones') }}">
                                            <!-- Task title and progress text -->
                                            <h3>
                                                {{ 'peticiones.deservicios' | trans({},'menu-i18n') }}
                                                {#<small class="pull-right">20%</small>#}
                                            </h3>
                                            {#<!-- The progress bar -->#}
                                            {#<div class="progress xs">#}
                                            {#<!-- Change the css width attribute to simulate progress -->#}
                                            {#<div class="progress-bar progress-bar-aqua" style="width: 20%"#}
                                            {#role="progressbar" aria-valuenow="20" aria-valuemin="0"#}
                                            {#aria-valuemax="100">#}
                                            {#<span class="sr-only">20% Complete</span>#}
                                            {#</div>#}
                                            {#</div>#}
                                        </a>
                                    </li>
                                    <!-- end task item -->
                                </ul>
                            </li>
                            <li class="footer">
                                <a href="{{ path('backend_servicio_peticiones') }}">{{ 'mas.informacion' | trans }}</a>
                            </li>
                        </ul>
                    </li>
                    <!-- User Account Menu -->
                    <li class="dropdown user user-menu">
                        <!-- Menu Toggle Button -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            {% if app.user is defined and app.user is not empty and app.user.image is defined and app.user.image is not empty %}
                                <img src="{{ asset (uploads ~ app.user.image.name) }}"
                                     class="user-image" alt="{{ app.user.name ~ ' ' ~ app.user.lastname }}">
                                <span class="hidden-xs">{{ app.user.name }}</span>
                            {% else %}
                                <img src="{{ asset('bundles/common/admin-lte/dist/img/user2-160x160.jpg') }}"
                                     class="user-image" alt="User Image">
                                <span class="hidden-xs">Backend</span>
                            {% endif %}
                        </a>

                        <ul class="dropdown-menu">
                            <!-- The user image in the menu -->
                            <li class="user-header">
                                {% if app.user is defined and app.user is not empty and app.user.image is defined and app.user.image is not empty %}
                                    <img src="{{ asset (uploads ~ app.user.image.name) }}" class="img-circle"
                                         alt="{{ app.user.name ~ ' ' ~ app.user.lastname }}">
                                {% else %}
                                    <img src="{{ asset('bundles/common/admin-lte/dist/img/user2-160x160.jpg') }}"
                                         class="img-circle" alt="User Image">
                                {% endif %}
                                <p>
                                    {{ app.user.name ~ ' ' ~ app.user.lastname }}
                                    {% if app.user.isSuperAdmin %}
                                        <small>{{ 'super.administrador' | trans({},'menu-i18n') }}</small>
                                    {% else %}
                                        <small>{{ 'administrador' | trans({},'menu-i18n') }}</small>
                                    {% endif %}
                                    {#{% if app.user.bnf %}#}
                                    {#<small>Opciones BNF Activas</small>#}
                                    {#{% endif %}#}
                                </p>
                            </li>
                            <!-- Menu Body -->
                            <li class="user-body">
                                <div class="row">
                                    <div class="col-xs-4 text-center">
                                        {#<a href="#">Followers</a>#}
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        <a href="{{ asset(assets ~ 'manual/manual-usuario.pdf') }}" target="_blank">
                                            Manual
                                        </a>
                                    </div>
                                    <div class="col-xs-4 text-center">
                                        {#<a href="#">Friends</a>#}
                                    </div>
                                </div>
                                <!-- /.row -->
                            </li>
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    <a href="{{ path('administrador_editar_perfil') }}"
                                       class="btn btn-default btn-flat">
                                        {{ 'editar.perfil' | trans({},'menu-i18n') }}
                                    </a>
                                </div>
                                <div class="pull-right">
                                    <a href="{{ path('backend_logout') }}" class="btn btn-default btn-flat">
                                        {{ 'cerrar.sesion' | trans({},'menu-i18n') }}
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!-- Control Sidebar Toggle Button -->
                    <li>
                        <a href="{{ path('frontend_buscador') }}" target="_blank">
                            <i class="fa fa-gears"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
{% endblock %}


