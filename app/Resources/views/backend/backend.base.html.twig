<!DOCTYPE html>
<html ng-app="SF" lang="es">
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}Seniors First!{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="autor" content="Equipo desarrollo BusinessInFact">
    <meta name="copyrigth" content="Copyright Â© Seniors First.">

    {% set locale = app.request.get('_locale') %}
    {% if locale is defined and locale is not empty %}
        <script type="text/javascript">
          window._locale_ = '{{ locale }}';
          console.log('baseUrl -> ', '{{ app.request.baseUrl }}');
          console.log('host -> ', '{{ app.request.schemeAndHttpHost }}');
        </script>
    {% else %}
        <script type="text/javascript">
          window._locale_ = 'es';
        </script>
    {% endif %}

    {% block stylesheets %}
        <link rel="stylesheet"
              href="{{ asset('bundles/common/bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
        <!-- Font Awesome -->
        <link rel="stylesheet"
              href="{{ asset('bundles/common/bower_components/font-awesome/css/font-awesome.min.css') }}">
        <!-- Ionicons -->
        <link rel="stylesheet" href="{{ asset('bundles/common/bower_components/Ionicons/css/ionicons.min.css') }}">
        <!-- Theme style -->
        <link rel="stylesheet" href="{{ asset('bundles/common/admin-lte/dist/css/AdminLTE.min.css') }}">
        <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
              page. However, you can choose any other skin. Make sure you
              apply the skin class to the body tag so the changes take effect. -->
        <link rel="stylesheet" href="{{ asset('bundles/common/admin-lte/dist/css/skins/skin-blue.min.css') }}">

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        {% include ':common:_block-stylesheets.html.twig' %}

        {#Required Backend Controllers#}
        <script src="{{ asset('bundles/backend/js/sfApp/controller/HeaderController.js') }}"></script>

        <!-- Google Font -->
        {#<link rel="stylesheet"#}
        {#href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">#}

    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body class="hold-transition skin-blue sidebar-mini">
<growl-notifications></growl-notifications>

{% block body %} {% endblock %}

{% block javascripts %}
    <!-- REQUIRED JS SCRIPTS -->
    <!-- jQuery 3 -->
    <script src="{{ asset('bundles/common/bower_components/jquery/dist/jquery.min.js') }}"
            type="text/javascript"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="{{ asset('bundles/common/bower_components/bootstrap/dist/js/bootstrap.min.js') }}"
            type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="{{ asset('bundles/common/admin-lte/dist/js/adminlte.js') }}" type="text/javascript"></script>

    {% include ':common:_block-javascripts.html.twig' %}

    <script>
      $(function () {
        $('[data-toggle="tooltip"]').tooltip();
      });
    </script>

{% endblock %}

</body>
</html>
